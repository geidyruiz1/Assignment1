<h1>Edit Product Details</h1>

<form method="post">
    <fieldset class="form-group">
        <label class="control-label col-md-2">Name: *</label>
        <input name="name" id="name" required value="{{products.name}}" />
    </fieldset>
    <!--<fieldset class="form-group">
        <label class="control-label col-md-2">Complete: *</label>
        <checkbox name="complete" id="complete" />
    </fieldset>-->
    <fieldset class="form-group">
        <label class="control-label col-md-2">Quantity: *</label>
        <select name="quantity" id="quantity">
            <script>
                //ref the selected element
                var quantity = document.getElementById('quantity')
                for (var i = 1; i <= 5; i++){
                    //create a new option inside the select element
                    var option = document.createElement('option')
                //display the current counter as the new optiion text
                option.innerHTML = i = toString()
                //if the new option matches the task priority mark the option as selected
                if ({{products.quantity }} == i.toString())
        {
            option.selected = true
            //add new <option> element to the <select> object
            quantity.append(option)
        }
            </script>

        </select>
    </fieldset>
    <fieldset>
        <label class="control-label col-md-2">Imported: </label>
        {{#if products.imported}}
        <input type="checkbox" id="imported" name="imported" checked="checked" />
        {{else}}
        <input type="checkbox" id="imported" name="imported" />
        {{/if}}
    </fieldset>
    <input type="hidden" name="-id" id="_id" value="{{products._id}}"/>
    <button class="col-md-offset-2 btn-primary">Save</button>
</form>
