<h1 align="center">Edit Product Details</h1>

    <form method="post">
        <fieldset class="form-group">
            <label class="control-label col-md-2">Name: *</label>
            <input name="name" id="name" required value="{{products.name}}" />
        </fieldset>

        <fieldset class="form-group">
            <label class="control-label col-md-2">Quantity: *</label>
            <input name="quantity" id="quantity" required value="{{products.quantity}}" />
        </fieldset>

        <fieldset class="form-group">
            <label class="control-label col-md-2">Price: *</label>
            <input name="price" id="price" required value="{{products.price}}" />
        </fieldset>
      
        <fieldset>
            <label class="control-label col-md-2">Imported: </label>
            {{#if products.imported}}
            <input type="checkbox" id="imported" name="imported" checked="checked" />
            {{else}}
            <input type="checkbox" id="imported" name="imported" />
            {{/if}}
        </fieldset>
        <input type="hidden" name="-id" id="_id" value="{{products._id}}" />
        <button class="col-md-offset-2 btn-primary">Save</button>
    </form>
